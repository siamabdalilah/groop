<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
        >

    <TextView
            android:text="Activity Name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/activity_name_user_view"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="142dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="141dp"
            />

    <EditText
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/bio_user_view"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_name_user_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>