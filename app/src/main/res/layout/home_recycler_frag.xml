<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:tools="http://schemas.android.com/tools"
        >

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="387dp"
            android:layout_height="543dp"
            android:id="@+id/home_recycler"
            tools:itemCount="5"

            tools:listitem="@layout/recycler_view_item"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_search_home"
            />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_search_home"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp"
            android:hint="Baseball"
            app:layout_constraintHorizontal_bias="0.805"
            />

    <TextView
            android:text="Sarch By Activity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintEnd_toStartOf="@+id/activity_search_home"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>



