<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserChatActivity"
        >
    <TextView
            android:text="Messaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title"
            android:textSize="30sp"
            app:layout_constraintVertical_bias="0.056"
            app:layout_constraintHorizontal_bias="0.425"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type message here"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/send"
            android:id="@+id/new_message"
            app:layout_constraintHorizontal_bias="0.151"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/message_list"/>

    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/new_message"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/send"
            app:layout_constraintHorizontal_bias="0.91"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/message_list"/>

    <ListView
            android:layout_width="395dp"
            android:layout_height="412dp"
            android:id="@+id/message_list"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/title" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>