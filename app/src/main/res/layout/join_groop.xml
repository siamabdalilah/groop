            <!--app:layout_constraintBottom_toTopOf="@+id/jgroop_bio"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--android:layout_marginStart="25dp"-->
            <!--/>-->

    <TextView
            android:text="This is all the information that I would like to but in the bio. Please join my groop as it is rly interesting and I need a lot of friends. Groooooop meeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jgroop_bio"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/jgroop_creator"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:layout_margin="16dp"
            android:fontFamily="@font/raleway" tools:layout_editor_absoluteY="3dp"/>

    <TextView
            android:text="04/03/04 04:04:03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/jgroop_location"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:id="@+id/jgroop_time"
    />

    <TextView
            android:text="Creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:id="@+id/jgroop_creator"
            android:fontFamily="@font/raleway"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@id/jgroop_location"
            android:layout_marginStart="8dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>