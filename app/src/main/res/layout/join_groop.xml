<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="St. Louis, MO"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jgroop_location"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/groop_name"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/raleway"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/messege_groop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGE"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/join_groop_btn"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/jgroop_bio"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_groop_for_groop_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT GROOP"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/jgroop_bio"
            app:layout_constraintStart_toEndOf="@id/messege_groop_btn" android:layout_marginStart="16dp"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:id="@+id/join_groop_btn"
            app:layout_constraintTop_toBottomOf="@+id/jgroop_bio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            />

    <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_recycler_join_groop"
            app:layout_constraintTop_toBottomOf="@id/join_groop_btn"
            android:layout_marginTop="15dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
            android:text="GROOP NAME"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/groop_name"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/raleway_light"/>

    <!--<TextView-->
            <!--android:text="JOINED:"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/textView5"-->
            <!--android:layout_marginTop="70dp"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/groop_name"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--android:layout_marginStart="25dp"-->
    <!--/>-->

    <TextView
            android:text="Made By:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/textView11"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jgroop_location"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/raleway"
            tools:layout_editor_absoluteX="16dp"/>

    <!--<TextView-->
            <!--android:text="BIO:"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/textView8"-->
