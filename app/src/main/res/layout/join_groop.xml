<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="St. Louis, MO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jgroop_location"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/jgroop_time"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/messege_groop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGE"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/jgroop_bio"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="113dp"
            />

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:id="@+id/join_groop_btn"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/jgroop_bio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="133dp"
            android:layout_height="91dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:id="@+id/recyclerView"
            />

    <TextView
            android:text="GROOP NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:text="JOINED:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            />

    <TextView
            android:text="Made By:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="100dp"
            />

    <TextView
            android:text="BIO:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/jgroop_bio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            />

    <TextView
            android:text="This is all the information that I would like to but in the bio. Please join my groop as it is rly interesting and I need a lot of friends. Groooooop meeeee"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:id="@+id/jgroop_bio"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="77dp"
            />

    <TextView
            android:text="04/03/04 04:04:03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jgroop_time"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            />

    <TextView
            android:text="Creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jgroop_creator"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginStart="18dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>