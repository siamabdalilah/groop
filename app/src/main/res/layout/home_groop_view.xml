<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <EditText
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="5"
            android:ems="10"
            android:id="@+id/search_by_distance"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/search_by_category"
            />

    <TextView
            android:text="Distance (miles)"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textView2"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="566dp"
            android:id="@+id/home_groops_recycler"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/search_by_distance"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

    <EditText
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="Baseball"
            android:ems="10"
            android:id="@+id/search_by_category"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:text="Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>



