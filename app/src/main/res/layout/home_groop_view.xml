<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="632dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/search_by_category" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/home_groops_recycler"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="Baseball"
            android:ems="10"
            android:id="@+id/search_by_category"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="20dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>