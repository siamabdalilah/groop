<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_activity_edit_back_button"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/home_id"
            app:layout_constraintEnd_toStartOf="@+id/create_id" android:layout_marginEnd="70dp"/>
    <EditText
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/home_id"
            android:minLines="4" android:textSize="14sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:hint="Edit your information for this activity..."
            app:layout_constraintHorizontal_bias="0.489"/>
    <TextView
            android:text="Activity"
            android:layout_width="129dp"
            android:layout_height="57dp"
            android:id="@+id/home_activity_edit_name" android:gravity="center"
            android:textSize="24sp" android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="106dp"/>
    <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="18sp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/home_activity_edit_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="33dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="339dp"
            app:layout_constraintHorizontal_bias="0.381"/>

    <Button
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_id"
            android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/home_id"
            />
</androidx.constraintlayout.widget.ConstraintLayout>