<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_1-1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="186dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="187dp"
            />

    <TextView
            android:text="Groops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="165dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="200dp"
            app:layout_constraintTop_toBottomOf="@+id/bio_1-1"
            android:layout_marginTop="20dp"
            />

    <TextView
            android:text="Bio:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name_1-1"
            android:layout_marginTop="45dp"
            />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="411dp"
            android:layout_height="341dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recycler_1-1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            />

    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message User"
            android:id="@+id/message_1-1"
            android:layout_marginEnd="143dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="143dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_1-1"
            android:layout_marginTop="20dp"
            />

    <TextView
            android:id="@+id/bio_1-1"
            android:gravity="left"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:maxLines="6"
            android:lines="6"
            android:text=""></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>